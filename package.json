  "author": "ADAMANT Foundation <devs@adamant.im>",
  "license": "GPL-3.0",
  "keywords": [
    "adamant",
    "notification",
    "service",
    "blockchain"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.5.0",
    "@tsconfig/node20": "^20.1.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "20.12.7",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "tsup": "^8.1.0",
    "typescript": "^5.4.3",
    "typescript-eslint": "^7.13.1"
  },
  "lint-staged": {
    "*.(ts|js)": [
      "eslint --fix",
      "prettier --write"
    ]
  }
