  "version": "0.0.1",
  "description": "ADAMANT Notification Service",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "tsup",
    "dev": "tsup --watch",
    "build": "tsup --dts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ./src",
    "postinstall": "husky install"
